{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "nome": {
      "type": "string"
    },
    "localizacao": {
      "type": "string"
    },
    "tipoCozinha": {
      "type": "string"
    },
    "horarioAbertura": {
      "type": "string",
      "format": "time"
    },
    "horarioFechamento": {
      "type": "string",
      "format": "time"
    },
    "capacidade": {
      "type": "integer"
    }
  },
  "required": ["nome", "localizacao", "tipoCozinha", "horarioAbertura", "horarioFechamento", "capacidade"],
  "additionalProperties": false
}
